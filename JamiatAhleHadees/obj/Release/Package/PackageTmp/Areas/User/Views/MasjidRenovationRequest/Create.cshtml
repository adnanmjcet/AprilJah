                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Elevation" value="@Model.Elevation" name="Elevation" class="form-control" placeholder="Elevation" />
                        </div>
                    </div>



                    <div class="form-group col-lg-6 col-xs-12">
                        <label for="Plan" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Plan</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Plan" value="@Model.Paln" name="Plan" class="form-control" placeholder="Plan" />
                        </div>
                    </div>




                    <div class="form-group col-lg-6 col-xs-12">
                        <label for="Doc1" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Doc1</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Doc1" value="@Model.Doc1" name="Doc1" class="form-control" placeholder="Doc1" />
                        </div>
                    </div>




                    <div class="form-group col-lg-6 col-xs-12">
