                        <label for="RequestSubmitName" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Request Submit Name</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <select class="form-control select2 select2-hidden-accessible ddnRequestSubmitId" aria-hidden="true" name="UserId">
                                <option value="0">Request Submit Name</option>

                                @if (Model.RequestSubmitLists != null)
                                {
                                    foreach (var item in Model.RequestSubmitLists)
                                    {
                                        string isSelected = string.Empty;
                                        if (item.Id == Model.RequestSubmitId)
                                        {
                                            isSelected = "selected";
                                        }
                                        <option value="@item.Id" @isSelected>@item.Id</option>
                                    }
                                }
                            </select>

                        </div>
                    </div>



                    <div class="form-group col-lg-6 col-xs-12">
                        <label for="Status" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Status</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Status" value="@Model.Status" name="Status" class="form-control" placeholder="Status" />
                        </div>
                    </div>*@



                    <div class="form-group col-lg-6 col-xs-12">
                        <label for="RequestTypeName" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Request Type Name</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <select class="form-control select2 select2-hidden-accessible RequestTypeId" aria-hidden="true" name="RequestTypeId">
                                <option value="0">Request Type Name</option>

                                @if (Model.RequestTypeLists != null)
                                {
                                    foreach (var item in Model.RequestTypeLists)
                                    {
                                        string isSelected = string.Empty;
                                        if (item.Id == Model.RequestTypeId)
                                        {
                                            isSelected = "selected";
                                        }
                                        <option value="@item.Id" @isSelected>@item.Name</option>
                                    }
                                }
                            </select>

                        </div>
                    </div>



                    <input type="hidden" id="hdnId" value="@Model.Id" name="Id" />
                    <input typeof="date" type="hidden" id="hdnCreatedDate" value="@DateTime.Now" name="CreatedDate" />
                    <input typeof="date" type="hidden" id="hdnRequestSubmitId" value="@Model.RequestSubmitName" name="RequestSubmitId" />
                    <input typeof="date" type="hidden" id="hdnStatus" value="@Model.Status" name="Status" />
                    <div class="form-group col-lg-12">
                        <div class="col-md-offset-5 col-md-2">
                            @if (Model.Id != null && Model.Id != 0)
                            {
                                <button type="submit" class="btn-block btn btn-success" data-id="@Model.Id" id="btnRegisterUpdate">
                                    Update
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn-block btn btn-success" data-id="0" id="btnRegister">
                                    Register
                                </button>
                            }
                        </div>
                        <div class="col-md-2">
                            <button value="Edit"
                                    class="btn-block btn btn-danger" type="button" id="addressSearch"
                                    onclick="location.href='@Url.Action("Index", "MasjidRenovationRequest")'">
