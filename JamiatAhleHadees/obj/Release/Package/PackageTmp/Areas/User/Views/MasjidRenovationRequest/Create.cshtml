                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Pic1" value="@Model.Pic1" name="Pic1" class="form-control" placeholder="Pic1" />
                        </div>
                    </div>






                    <div class="form-group col-lg-6 col-xs-12">
                        <label for="Pic2" class="control-label col-lg-4 col-md-4 col-sm-3 col-xs-4">Pic2</label>
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-8">
                            <input type="text" id="Pic2" value="@Model.Pic2" name="Pic2" class="form-control" placeholder="Pic2" />
                        </div>
                    </div>




                    <div class="form-group col-lg-6 col-xs-12">
