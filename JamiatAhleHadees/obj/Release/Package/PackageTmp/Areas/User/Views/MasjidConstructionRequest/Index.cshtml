@model IEnumerable<CommonLayer.CommonModels.MasjidConstructionRequestModel>

@{
    ViewBag.Title = "Index";

}

<div class="box-header with-border">
    <h3 class="box-title">Masjid Construction List</h3>
</div>
<br />
<div class="col-lg-12">
    <button value="Create New"
            class="btn btn-primary btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("Create")'">
        Create New
    </button>
    </div>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <td><b>Id</b></td>
                <td><b>Short Description</b></td>
                <td><b>User Name</b></td>
                <td><b>Location</b></td>
                <td><b>Area</b></td>
                <td><b>Masjid Name</b></td>
                <td><b>Construction Cost</b></td>
                <td><b>Existing Floors</b></td>
                <td><b>Amount Needed</b></td>
                @*<td><b>Engineer</b></td>
                <td><b>Elevation</b></td>
    <td><b>Plan</b></td>
    <td><b> Doc1</b></td>
    <td><b> Doc2</b></td>
    <td><b> Doc3</b></td>
    <td><b> Pic1</b></td>
    <td><b> Pic2</b></td>
    <td><b> Pic3</b></td>
    <td><b>Request Submit Name</b></td>
    <td><b>Status</b></td>
    <td><b>Created Date</b></td>*@
                <td><b>Request Type Name</b></td>
                <td><b>Edit</b></td>
                <td><b>Details</b></td>
                <td><b>Delete</b></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ShortDescription</td>
                    <td>@item.UserName</td>
                    <td>@item.Location</td>
                    <td>@item.Area</td>
                    <td>@item.MasjidName</td>
                    <td>@item.ConstructionCost</td>
                    <td>@item.ExistingFloors</td>
                    <td>@item.AmountNeeded</td>
                    @*<td>@item.Engineer</td>
                    <td>@item.Elevation</td>
                    <td>@item.Paln</td>*@
                    <td>@item.RequestTypeName</td>
                    @*<td>@item.Status</td>
                    <td>@item.CreatedDate</td>*@


                    <td>
                        <button value="Edit"
                                class="btn btn-primary btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Create", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Edit
                        </button>
                    </td>
                    <td>
                        <button value="Details"
                                class="btn btn-info btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Details", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Details
                        </button>
                    </td>
                    <td>
                        <button value="Delete"
                                class="btn btn-danger btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Delete", "MasjidConstructionRequest" ,new {id = item.Id })'">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*</div>*@

